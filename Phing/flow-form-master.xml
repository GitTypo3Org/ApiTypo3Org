<?xml version="1.0"?>
<project name="imported" basedir="." default=""  description="">

	<target name="build-flow-form-master" depends="bootstrap">
		<echo>----------------------------------------</echo>
		<echo>| Generating Flow Form master API     |</echo>
		<echo>----------------------------------------</echo>

		<!-- check version http://typo3.org/download/packages/ -->
		<property name="tagName" value="master"/>
		<property name="tagNameDisplay" value="master"/>
		<property name="currentStableVersion" value="false"/>

		<property name="version" value="typo3-flow-form-master"/>
		<property name="deployPath" value="flow-form"/>
		<property name="deployPathName" value="master"/>
		<property name="repository" value="git://git.typo3.org/FLOW3/Packages/TYPO3.Form.git"/>

		<!-- Initialize the environment -->
		<mkdir dir="${path.build.api}${version}" />
		<mkdir dir="${path.www}flow-form" />

		<!-- Reset the repository (optional) -->
		<!-- <delete dir="${path.source}${version}" /> -->
		<download repository="${repository}" target="${path.source}${version}" tagName="${tagName}" />

		<!-- Reset the API (recommanded) -->
		<delete dir="${path.build.api}${version}" />

		<!-- Generate the API using APIgen -->
		<commandLocal command="php Libraries/apigen/apigen.php --config ${path.source}${version}/Scripts/api.neon --destination ${path.build.api}${version}" />

		<!-- Archive -->
		<archive source="${path.build.api}${version}" target="${path.build.archive}" version="${version}" />

		<!-- Deploy -->
		<deploy version="${version}" deployPath="${deployPath}" deployPathName="${deployPathName}" current="${currentStableVersion}"/>

		<echo>OK</echo>
	</target>

</project>
