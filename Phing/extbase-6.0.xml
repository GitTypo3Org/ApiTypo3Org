<?xml version="1.0"?>
<project name="imported" basedir="." default=""  description="">

	<target name="build-extbase-6.0" depends="bootstrap"><!-- CHANGE ME FOR NEXT VERSION -->
		<echo>----------------------------------------</echo>
		<echo>| Generating Extbase 6.0 API              |</echo><!-- CHANGE ME FOR NEXT VERSION -->
		<echo>----------------------------------------</echo>

		<!-- check version http://typo3.org/download/packages/ -->
		<property name="tagName" value="extbase_6-0"/><!-- CHANGE ME FOR NEXT VERSION -->
		<property name="tagNameDisplay" value="6.0"/><!-- CHANGE ME FOR NEXT VERSION -->
		<property name="currentStableVersion" value="true"/><!-- CHANGE ME FOR NEXT VERSION -->

		<property name="version" value="extbase-6.0"/><!-- CHANGE ME FOR NEXT VERSION -->
		<property name="deployPath" value="extbase"/>
		<property name="deployPathName" value="60"/><!-- CHANGE ME FOR NEXT VERSION -->
		<property name="repository" value="git://git.typo3.org/TYPO3v4/CoreProjects/MVC/extbase.git"/>

		<!-- Initialize the environment -->
		<mkdir dir="${path.build.api}${version}" />
		<mkdir dir="${path.www}extbase" />

		<!-- Reset the repository (optional) -->
		<!-- <delete dir="${path.source}${version}" /> -->
		<download repository="${repository}" target="${path.source}${version}" tagName="${tagName}" />

		<!-- Reset the API (recommanded) -->
		<delete dir="${path.build.api}${version}" />

		<!-- Generate the PHP UML API -->
		<phpuml source="${path.source}${version}" target="${path.build.api}${version}" tagName="${tagNameDisplay}" />


		<!-- Archive -->
		<archive source="${path.build.api}${version}" target="${path.build.archive}" version="${version}" />

		<!-- Deploy -->
		<deploy version="${version}" deployPath="${deployPath}" deployPathName="${deployPathName}" current="${currentStableVersion}"/>

		<echo>OK</echo>
	</target>

</project>
